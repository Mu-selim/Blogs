{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2022",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["api/v1/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}